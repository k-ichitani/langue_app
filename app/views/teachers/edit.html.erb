<div>
  <h2>講師情報編集</h2>
  <div>
    <%= form_with model: @teacher, url: teachers_information_path, method: :patch do |f| %>
      <div>
        <%= f.label :講師ID %>
        <%= @teacher.id %>
      </div>
      <div>
        <%= f.label :講師名 %>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
      </div>
      <div>
        <%= f.label :メールアドレス %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :電話番号 %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label :得意分野 %>
        <%= f.select :specialty, Teacher.specialties.keys, {} %>
      </div>
      <div>
        <th>講師ステータス</th>
        <% if admin_signed_in? %>
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted_false, "有効" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted_true, "退会" %>
        <% else %>
          <%= @teacher.is_deleted %>
        <% end %>
      </div>
      <%= f.submit '変更を保存' %>
    <% end %>
  </div>
</div>