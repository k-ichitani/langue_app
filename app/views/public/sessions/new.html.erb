<div class="container">
  <div class="row-md-7 offset-3 mt-5 h2">ログイン</div>
  <div class="row-md-6 offset-4">
    <%= form_with model: @student, url: student_session_path do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

      <%= render "public/shared/links" %>
  </div>
    <div class="row-md-6 offset-4">
        <%= link_to 'ゲストログイン', students_guest_sign_in_path, class: "btn btn-secondary sign_in", method: :post %>
    </div>

</div>